<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/blue">

    <!-- It's Title -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@color/colorPlanetGray" />

        <TextView
            android:layout_width="131dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="@string/project_title"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingTop="10dp"/>
    </FrameLayout>

    <Button
        android:id="@+id/btn_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/corner_button"
        android:text="pin_test"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginTop="300dp"
        android:onClick="access_Pin_page"/>

    <Button
        android:id="@+id/btn_access_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/corner_button"
        android:text="PIN_ACCESS"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:onClick="makePin"/>

    <Button
        android:id="@+id/btn_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/corner_button"
        android:text="USER SIGN IN"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:onClick="access_Login_page"/>


</LinearLayout>